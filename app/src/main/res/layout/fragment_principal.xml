<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PrincipalFragment"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragmentPrincipal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:id="@+id/progressBarPrincipal"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txtBanca"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="POS1"/>
            <!--<TextView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:gravity="right"-->
                <!--android:text="POS1"/>-->

            <TextClock
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:format12Hour="dd-MMM-yyyy:hh:mm:ss a"
                android:gravity="right" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="10dp"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtItemSelected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:textStyle="italic"
                android:padding="15dp"
                android:background="@drawable/textview_border"
                android:hint="Seleccionar loterias"
                />
        </LinearLayout>




        <LinearLayout


            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal"

            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/txtJugada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/textview_border"
                android:textColor="@color/oper_text_color"
                android:textSize="24sp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:hint="Jugada"
                android:gravity="center"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txtMontodisponible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/textview_border"
                android:text="0"
                android:textColor="@android:color/darker_gray"
                android:textSize="24sp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:gravity="center"
                />

            <ProgressBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:id="@+id/progressBarMontoDisponible"
                />

            <TextView
                android:id="@+id/txtMontojugar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/textview_border"
                android:text=""
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:gravity="center"
                android:hint="Monto"
                android:textStyle="bold"/>


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="7dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="7dp"
            android:gravity="center">

            <!--android:layout_marginTop="-8dp"-->
            <TextView
                android:id="@+id/txtTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tot: $0.00"

                android:layout_marginRight="12dp"
                android:layout_marginLeft="7dp"
                />

            <TextView
                android:id="@+id/txtDescuento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Des: $0.00"

                android:layout_marginRight="3dp"
                android:layout_marginLeft="7dp"
                />

            <!--android:layout_marginTop="-8dp"-->
            <com.example.jean2.creta.CheckBox_Icon
                android:id="@+id/ckbDescuento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Desc."
                android:textSize="10dp"

                android:layout_marginRight="2dp"
                android:layout_marginLeft="3dp"/>

            <com.example.jean2.creta.CheckBox_Icon
                android:id="@+id/ckbPrint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/icon_print"
                android:textSize="30dp"
                android:layout_marginRight="1dp"
                android:layout_marginLeft="1dp"/>
            <com.example.jean2.creta.CheckBox_Icon
                android:id="@+id/ckbSms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/icon_sms"
                android:textSize="30dp"
                android:textColor="@android:color/holo_blue_dark"
                android:layout_marginRight="1dp"
                android:layout_marginLeft="1dp"/>
            <com.example.jean2.creta.CheckBox_Icon
                android:id="@+id/ckbWhatsapp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/icon_whatsapp"
                android:textSize="30dp"
                android:textColor="@android:color/holo_green_dark"
                android:layout_marginRight="1dp"
                android:layout_marginLeft="1dp"/>
            <!--<com.example.jean2.creta.CheckBox_Icon-->
                <!--android:id="@+id/ckbSms"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--android:text="@string/icon_sms"-->
                <!--android:textSize="40dp"/>-->
            <!--<com.example.jean2.creta.CheckBox_Icon-->
                <!--android:id="@+id/ckbWhatsapp"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--android:text="@string/icon_whatsapp"-->
                <!--android:textSize="40dp"/>-->
        </LinearLayout>

        <!--<include layout="@layout/formulario_jugada_layout"/>-->

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:columnCount="4"
            android:orientation="horizontal"
            android:rowCount="4">


            <!--<Button-->
            <!--android:id="@+id/a"-->
            <!--android:text="hola"-->
            <!--android:layout_column="0"-->
            <!--android:layout_row="0"-->
            <!--android:layout_columnSpan="3"-->
            <!--android:layout_columnWeight="1"/>-->
            <!--<Button-->
            <!--android:id="@+id/b"-->
            <!--android:text="hola"-->
            <!--android:layout_column="3"-->
            <!--android:layout_row="0"-->
            <!--/>-->


            <Button
                android:id="@+id/btnPunto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/oper_button"
                android:text="."
                android:textColor="@color/oper_text_color"
                android:textSize="24sp"
                android:padding="10dp"
                />

            <Button
                android:id="@+id/btnD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/oper_button"
                android:text="D"
                android:textColor="@color/oper_text_color"
                android:textSize="24sp"
                android:padding="10dp"
                />

            <Button
                android:id="@+id/btnQ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/oper_button"
                android:text="Q"
                android:textColor="@color/oper_text_color"
                android:textSize="24sp"
                android:padding="10dp"
                />

            <Button
                android:id="@+id/btnBackspace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:layout_weight="1"
                android:background="@drawable/oper_button"
                android:text="BACKSPACE"
                android:textColor="@color/oper_text_color"
                android:textSize="20sp"
                android:padding="10dp"
                />




            <!-- segunda fila -->
            <Button
                android:id="@+id/btn7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:background="@drawable/numbers_button"
                android:text="7"
                android:textSize="24sp"
                android:padding="10dp"
                />

            <Button
                android:id="@+id/btn8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:background="@drawable/numbers_button"
                android:text="8"
                android:textSize="24sp"
                android:padding="10dp"
                />

            <Button
                android:id="@+id/btn9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/numbers_button"
                android:text="9"
                android:textSize="24sp"
                android:padding="10dp"
                />

            <Button
                android:id="@+id/btnSlash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:layout_weight="1"
                android:background="@drawable/oper_button"
                android:text="/"
                android:textColor="@color/oper_text_color"
                android:textSize="24sp"
                android:padding="10dp"
                />





            <!-- TERCERA FILA -->
            <Button
                android:id="@+id/btn4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/numbers_button"
                android:text="4"
                android:textSize="24sp"
                android:padding="10dp"
                />

            <Button
                android:id="@+id/btn5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/numbers_button"
                android:text="5"
                android:textSize="24sp"
                android:padding="10dp"
                />

            <Button
                android:id="@+id/btn6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/numbers_button"
                android:text="6"
                android:textSize="24sp"
                android:padding="10dp"
                />

            <Button
                android:id="@+id/btnMenos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:layout_weight="1"
                android:background="@drawable/oper_button"
                android:text="-"
                android:textColor="@color/oper_text_color"
                android:textSize="24sp"
                android:padding="10dp"
                />


            <!-- CUERTA FILA -->

            <Button
                android:id="@+id/btn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/numbers_button"
                android:text="1"
                android:textSize="24sp"
                android:padding="10dp"
                />

            <Button
                android:id="@+id/btn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/numbers_button"
                android:text="2"
                android:textSize="24sp"
                android:padding="10dp"
                />

            <Button
                android:id="@+id/btn3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/numbers_button"
                android:text="3"
                android:textSize="24sp"
                android:padding="10dp"
                />

            <Button
                android:id="@+id/btnMas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:layout_weight="1"
                android:background="@drawable/oper_button"
                android:text="+"
                android:textColor="@color/oper_text_color"
                android:textSize="24sp"
                android:padding="10dp"
                />



            <!-- CUERTA FILA -->
            <Button
                android:id="@+id/btn0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/numbers_button"
                android:text="0"
                android:textSize="24sp"
                android:layout_columnSpan="2"
                android:layout_gravity="fill"
                android:padding="10dp"

                />

            <Button
                android:id="@+id/btnEnter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/oper_button"
                android:textColor="@color/oper_text_color"
                android:text="ENTER"
                android:textSize="24sp"
                android:layout_columnSpan="2"
                android:layout_gravity="fill"
                android:padding="10dp"
                />


            <com.example.jean2.creta.TextView_Icon
                android:id="@+id/txtPrint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/icon_print"
                android:textSize="70dp"
                android:textColor="@android:color/holo_blue_dark"
                android:layout_margin="8dp"/>
            <com.example.jean2.creta.TextView_Icon
                android:id="@+id/txtDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/icon_delete"
                android:textSize="70dp"
                android:textColor="@android:color/holo_red_dark"
                android:layout_margin="8dp"/>

            <Spinner
                android:id="@+id/spinnerTickets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnSpan="2"
                android:layout_gravity="fill"
                />

        </GridLayout>
    </LinearLayout>

</FrameLayout>