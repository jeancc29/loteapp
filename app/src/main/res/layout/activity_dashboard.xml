<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jean2.creta.DashboardActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.example.jean2.creta.TextView_Icon
                android:id="@+id/txtBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/icon_back"
                android:textSize="40dp"
                android:textColor="@color/text_black"

                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_marginLeft="20dp"
                android:layout_alignParentStart="true"/>

            <TextView
                android:id="@+id/txtFecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:background="@drawable/textview_border"
                android:hint="Fecha inicial"
                android:padding="3dp"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp"
                android:textAlignment="center"
                android:textStyle="italic" />


            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:indeterminateTint="@color/colorPrimary"
                android:indeterminateTintMode="src_in"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:visibility="gone" />
        </RelativeLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ventas grafica"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="25dp"
                        />
                </LinearLayout>
                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/chart1"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"

                    android:layout_marginBottom="20dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ventas por loteria"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="25dp"
                        />
                </LinearLayout>

                <TableLayout
                    android:id="@+id/tableTotalesPorLoteria"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="30dp"
                    android:layout_marginHorizontal="10dp"
                    android:collapseColumns=""
                    >

                    <TableRow android:layout_height="wrap_content"
                        android:layout_width="wrap_content">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Loteria"
                            android:textStyle="bold"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textSize="20dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Venta total"
                            android:textStyle="bold"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textSize="20dp"/>


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Premios"
                            android:textStyle="bold"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textSize="20dp"/>




                    </TableRow>

                    <TableRow android:layout_height="wrap_content"
                        android:layout_width="wrap_content">
                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="-"

                            android:layout_weight="1"
                            android:gravity="center"
                            android:textSize="20dp"
                            />

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0.00"

                            android:layout_weight="1"
                            android:gravity="center"
                            android:textSize="20dp"
                            />

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0.00"

                            android:layout_weight="1"
                            android:gravity="center"
                            android:textSize="20dp"
                            />



                    </TableRow>


                </TableLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Jugadas realizadas"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="25dp"
                        />
                </LinearLayout>

                <Spinner
                    android:id="@+id/spinnerLoterias"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    />

                <Spinner
                    android:id="@+id/spinnerSorteos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    />

                <TableLayout
                    android:id="@+id/tableJugadas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="30dp"
                    android:layout_marginHorizontal="10dp"
                    android:collapseColumns=""
                    >

                    <TableRow android:layout_height="wrap_content"
                        android:layout_width="wrap_content">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Loteria"
                            android:textStyle="bold"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textSize="20dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Jugada"
                            android:textStyle="bold"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textSize="20dp"/>


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Monto"
                            android:textStyle="bold"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textSize="20dp"/>




                    </TableRow>

                    <TableRow android:layout_height="wrap_content"
                        android:layout_width="wrap_content">
                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="-"

                            android:layout_weight="1"
                            android:gravity="center"
                            android:textSize="20dp"
                            />

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0.00"

                            android:layout_weight="1"
                            android:gravity="center"
                            android:textSize="20dp"
                            />

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0.00"

                            android:layout_weight="1"
                            android:gravity="center"
                            android:textSize="20dp"
                            />



                    </TableRow>


                </TableLayout>

            </LinearLayout>


        </ScrollView>

    </LinearLayout>



</android.support.constraint.ConstraintLayout>
