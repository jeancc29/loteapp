<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvItemsSelected"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:textSize="25sp"
            android:textStyle="italic"
            android:padding="20dp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/jugada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/oper_button"
            android:text="C"
            android:textColor="@color/oper_text_color"
            android:textSize="24sp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"/>

        <Button
            android:id="@+id/montodisponible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/oper_button"
            android:text="( )"
            android:textColor="@color/oper_text_color"
            android:textSize="24sp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"/>

        <Button
            android:id="@+id/montojugar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/oper_button"
            android:text="%"
            android:textColor="@color/oper_text_color"
            android:textSize="24sp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.example.jean2.creta.CheckBox_Icon
            android:id="@+id/ckbPrint"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/icon_print"/>
        <com.example.jean2.creta.CheckBox_Icon
            android:id="@+id/ckbSms"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/icon_sms"/>
        <com.example.jean2.creta.CheckBox_Icon
            android:id="@+id/ckbWhatsapp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/icon_whatsapp"/>
    </LinearLayout>

</LinearLayout>