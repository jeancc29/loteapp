<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BluetoothDevices"
    android:orientation="vertical"
    >


    <Button
        android:id="@+id/btnAgregar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Agregar o cambiar impresora"
        android:background="@color/colorPrimary"
        android:textColor="#ffffff"
        android:onClick="agregar"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:cardElevation="@dimen/activity_vertical_margin"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Impresora guardada"
                    android:textSize="30dp"/>

                <TextView
                    android:id="@+id/nombreImpresora"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PT200"
                    android:textSize="20dp"
                    android:layout_margin="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Impresora Bluetooth"
                    android:textSize="20dp"/>


                <TextView
                    android:id="@+id/direccionFisicaImpresora"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="02:36:6B:B5:1A:7F"
                    android:textSize="20dp"/>
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_gravity="center_vertical">
                <ImageView
                    android:gravity="end"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_check_circle_black_24dp"/>
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>