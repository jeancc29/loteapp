<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnVentas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ventas"
            android:paddingBottom="25dp"
            android:paddingTop="25dp"/>
        <Button
            android:id="@+id/btnMonitoreo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Monitoreo"
            android:paddingBottom="25dp"
            android:paddingTop="25dp"/>
        <Button
            android:id="@+id/btnPendientesPago"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pendientes de pago"
            android:paddingBottom="25dp"
            android:paddingTop="25dp"/>
        <Button
            android:id="@+id/btnDuplicar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Duplicar ticket"
            android:paddingBottom="25dp"
            android:paddingTop="25dp"/>

        <Button
            android:id="@+id/btnPagarTicket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pagar ticket"
            android:paddingBottom="25dp"
            android:paddingTop="25dp"/>
        <Button
            android:id="@+id/btnHistoricoVentas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Historico de ventas"
            android:paddingBottom="25dp"
            android:paddingTop="25dp"/>
        <Button
        android:id="@+id/btnAyuda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ayuda"
        android:paddingBottom="25dp"
        android:paddingTop="25dp"/>

        <Button
            android:id="@+id/btnSalir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cerrar sesion"
            android:paddingBottom="25dp"
            android:paddingTop="25dp"/>
    </LinearLayout>

</FrameLayout>